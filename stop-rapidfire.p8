pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
--stop the rapid-fire

fire=false
release=true

::_::
cls()
if btn(4)
and release then
	fire=true
	release=false
end
if not btn(4)
and not release then
	release=true
	fire=false
end

--show values
print("press z",2,2,6)
print(
"fire:"..(fire and "true" or "false"),
2,10,8)
print(
"release:"..(release and "true" or "false"),
2,18,7)
flip()
goto _
