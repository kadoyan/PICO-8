function _init()
	en={
		x=flr(rnd(127)),
		y=flr(rnd(127)),
	}
	pl={
		x=58,
		y=58,
	}
	coll1=false
	coll2=false
end

function _update()
	if btn(0) then
		pl.x-=1
	end
	if btn(1) then
		pl.x+=1
	end
	if btn(2) then
		pl.y-=1
	end
	if btn(3) then
		pl.y+=1
	end
	coll1=
	spr_coll(en,pl,0,0)
	coll2=
	spr_coll(en,pl,-1,-1)
end

function _draw()
	cls(0)
	spr(1,en.x,en.y,1,1)
	spr(2,pl.x,pl.y,1,1)
	print("padding=0:"..
	(coll1 and "true" or "false")
	,1,1,7)
	print("padding=2:"..
	(coll2 and "true" or "false")
	,1,8,7)
end
